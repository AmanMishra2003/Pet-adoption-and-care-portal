<%- layout('/layout/boilerplate4.ejs') %>

<main class="my-5 mx-4">
    <p class="h2">Profile</p>
    <p class="my-3"><a href="/admin/profile" class="text-decoration-none text-dark">Admin Dashboard</a> · <a href="/admin/profile" class="text-decoration-none text-dark"><span class="">Profile</span></a> · <a href="/admin/profile/allvet" class="text-decoration-none text-secondary"><span class="text-muted ">All Vet</span></a></p>
    <section>
        <% vetData.forEach(element => { %>
            
            <div class="card w-100 d-flex flex-row align-items-center text-white bg-dark my-3">
                <div class="w-25">
                    <img src="<%=element.img %>" alt="" srcset="" class="img-fluid w-100 h-100" style="object-fit: cover; object-position:center">
                </div>
                <div class="card-body border-end">
                    <p class="h3 text-capitalize"> Name : <%= element.name %></p>
                    <p class="fs-6 text-capitalize "> ClinicName :<%= element.clinicName %></p> 
                    <p  class=" fs-6"> specialist :<%= element.specialist %></p>
                    <p  class=" fs-6"> qualification :<%= element.qualification %></p>
                    <p  class=" fs-6"> Experience : <%= element.exp %></p>
                    <p  class=" fs-6"> Clinic Address: <%= element.clinicAddress %>, <%= element.city %>, <%= element.state %></p>
                    <p  class=" fs-6"> Email : <%= element.email %></p>
                    <p  class=" fs-6"> Clinic Number : <%= element.clinicNumber %></p>
                    <p  class=" fs-6"> Operating Hour : <%= element.operatingHour.start %>:00 - <%= element.operatingHour.end %>:00 Hr</p>
                </div>
                <div class=" d-flex flex-column text-center mx-4">
                    <div>
                        <a href="/admin/profile/allvet/<%= element._id %>/edit" class=" my-3 btn btn-lg btn-outline-warning ">Edit Details</a>
                    </div>
                    <div>
                        <form action="/admin/profile/allvet/<%= element._id %>?_method=DELETE" method="post">
                            <button type="submit"  class="btn btn-lg btn-outline-danger">Delete</button>
                        </form>
                    </div>
                    
                </div>
                
            </div>
        <%}) %>
        
    </section>
    
</main>
