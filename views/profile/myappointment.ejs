                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="w-100">
                            <% appointment_passed.forEach(ele=> { %>
                                <tr>
                                    <th scope="row"><%= appointment_passed.indexOf(ele)+1 %></th>
                                    <td class="text-bold">
                                        <%=ele.petname %>
                                    </td>
                                    <td class="text-muted">
                                        <%=`${ele.date.getDate()} /${ele.date.getMonth()+1}/${ele.date.getFullYear()}` %>
