
<% layout('layout/boilerplate') %>
    
    <main class="container-sm">
        <h3 class="text-center text-secondary py-2 fw-bold">About <%= data.name%></h3>
        <div class="w-100 d-flex justify-content-between">
            <div class="tag badge badge-pill badge-secondary d-flex align-items-center px-2 py-2"><a href="/Adopt" class="text-white">⬅ Back to Results</a></div>
            <div class="tag badge badge-pill badge-secondary d-flex align-items-center px-2 py-2"><p class="mb-0"> ⚪️ Posted on: <%= date %></p></div>
        </div>

        <div class="name py-3">
            <p class="text-secondary h2">Heya !!! My Name is <%= data.name%></p>
        </div>

        <div class="images container">
            <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false" data-bs-interval="false" style="z-index: 0;">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="<%= data.img[0] %>" class="d-block w-100" alt="..." style="height:60vh; object-fit:contain; ">
                    </div>
                  <% for( let i of data.img.slice(1,data.img.length)) { %>
                    <div class="carousel-item ">
                        <img src="<%= i %>" class="d-block w-100" alt="..." style="height:60vh; object-fit:contain; ">
                    </div>
                  <% } %>
                    
                    <!-- <div class="carousel-item  active">
                        <img src="/images/huskey.png" class="d-block w-100" alt="..." style="height:60vh; object-fit:contain; ">
                    </div> -->
                    <!-- <div class="carousel-item">
                        <img src="..." class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="..." class="d-block w-100" alt="...">
                    </div> -->
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"><svg xmlns="http://www.w3.org/2000/svg" width="2rem" height="2rem" fill="black" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                    <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0m3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z"/>
                  </svg></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"><svg xmlns="http://www.w3.org/2000/svg" width="2rem" height="2rem" fill="black" class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
                    <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z"/>
                  </svg></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
        </div>

        <div class="fact-about-dogo pt-5 pb-3 border-bottom">
            <p class="text-black h3">Facts About Me</p>
            <div class="row">
                <div class="col-sm-6">
                    <p class="fw-bold" style="font-size: 1.25rem;">Bread : <span class="fw-light text-capitalize"><%=data.facts.breed%></span></p>
                </div>
                <div class="col-md-6">
                    <p class="fw-bold" style="font-size: 1.25rem;">Gender : <span class="fw-light text-capitalize"><%=data.gender%></span></p>
                </div>
                <div class="col-md-6">
                    <p class="fw-bold" style="font-size: 1.25rem;">Vaccinated : <span class="fw-light text-capitalize"><%=data.facts.vaccinated%></span></p>
                </div>
                <div class="col-md-6">
                    <p class="fw-bold" style="font-size: 1.25rem;">Pet ID : <span class="fw-light text-capitalize"><%=data.id%></span></p>
                </div>
                <div class="col-md-6">
                    <p class="fw-bold" style="font-size: 1.25rem;">Age : <span class="fw-light text-capitalize"><%=data.age%> Yrs</span></p>
                </div>
                <div class="col-md-6">
                    <p class="fw-bold" style="font-size: 1.25rem;">Neutered : <span class="fw-light text-capitalize"><%=data.facts.neutered%></span></p>
                </div>
            </div>
        </div>

        <div class="fact-about-dogo pt-5 pb-3 border-bottom">
            <p class="text-black h3">My Info</p>
            <div class="row">
                <div class="col-6 col-sm-4">
                    <p  style="font-size: 1.25rem;"><span class="fw-bold">
                        <%if(data.info.information.includes('Spayed')){%>
                            <%- right %>
                        <% }else{ %>
                            <%- wrong %>
                        <% } %>
                      </span> Spayed</p>
                </div>
                <div class="col-6 col-sm-4">
                    <p style="font-size: 1.25rem;"><span class="fw-bold">
                        <%if(data.info.information.includes('Shots Up to Date')){%>
                            <%- right %>
                        <% }else{ %>
                            <%- wrong %>
                        <% } %>
                    </span> Shots Up to Date</p>
                </div>
                <div class="col-6 col-sm-4">
                    <p style="font-size: 1.25rem;"><span class="fw-bold"> <%if(data.info.information.includes('Needs Loving Adopter')){%>
                        <%- right %>
                    <% }else{ %>
                        <%- wrong %>
                    <% } %></span> Needs Loving Adopter</p>
                </div>
                <div class="col-6 col-sm-4">
                    <p style="font-size: 1.25rem;"><span class="fw-bold">
                    <%if(data.info.information.includes('Good with Cats')){%>
                        <%- right %>
                    <% }else{ %>
                        <%- wrong %>
                    <% } %></span> Good with Cats</p>
                </div>
                <div class="col-6 col-sm-4">
                    <p style="font-size: 1.25rem;"><span class="fw-bold">
                        <%if(data.info.information.includes('Good with Dogs')){%>
                            <%- right %>
                        <% }else{ %>
                            <%- wrong %>
                        <% } %>
                    </span> Good with Dogs</p>
                </div>
                <div class="col-6 col-sm-4">
                    <p style="font-size: 1.25rem;"><span class="fw-bold">
                        <%if(data.info.information.includes('Good with Kids')){%>
                            <%- right %>
                        <% }else{ %>
                            <%- wrong %>
                        <% } %>
                    </span> Good with Kids</p>
                </div>
            </div>
        </div>

        <div class="fact-about-dogo pt-5 pb-3 border-bottom">
            <p class="text-black h3">My Story</p>
            <p class="fs-5 text-secondary"><%=data.story.description%></p>
        </div>

        <div class="fact-about-dogo pt-5 pb-3 border-bottom">
            <p class="text-black h3">Additional Adoption Info</p>
            <p class="fs-5 text-secondary"><%=data.additional_adoption_info.description%></p>
        </div>

        <div class="container p-5 border-top border-5 border-secondary rounded mb-3" style="background-color: rgb(243,241,235);">
            <p class="text-black h3">Contact Info</p>
            <div class="row align-items-center">
                <div class="col-12">
                    <p class="fw-bold" style="font-size: 1.25rem;">Name : <span class="fw-light"><%=data.owner_detail.name%></span></p>
                    <a href="/adopt/<%= data._id %>/adoptapplication" class="btn btn-lg btn-success text-white w-100">Apply for Adoption</a>
                </div>
              
               
            </div>
        </div>

    </main>

    
    

